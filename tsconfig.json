{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl":".",
    "paths":{
      "@/controllers/*":["src/features/*"],
      "@/types/*": ["src/features/*"],
      "@/service/*": ["src/features/*"],
      "@/routes/*": ["src/routes/*"],
    }
  },
  "include": ["src/**/*"]
}

